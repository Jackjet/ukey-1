<div class="mbox">
	<div class="mboxR">
	<!--基本信息-->
	<div class="mboxR_top mboxR_top_first">
		<img src="#springUrl('/')resources/images/icon_list.png" /><h3 class="h_nav">基本信息</h3>
	</div>
	<div class="mboxRbox">
	<form id="adminForm" action="#springUrl('/')admins" method="post">
	<div class="tabConBox_L" style="width:100%;">
	<input type="hidden" name="retpath" value="$retpath"/>
	<p>
	<span>项目名称</span>
	<select name="project" class="bor sel342">
		#foreach($projectobj in $projects)
		<option value="${projectobj.id}" >${projectobj.name}</option>
		#end
	</select>
	<p/>
	<p>
	<span>管理员角色</span>
	<select name="adminRole" class="bor sel342">
		#foreach($adminrole in $adminroles)
		<option value="${adminrole.id}" >${adminrole.roleName}</option>
		#end
	</select>
	</p>
	<p>
	<span>状态</span>
	#foreach($status in $statuss)
		<input type="radio" name="status" class="radcom rad_wh" value="${status.status}"
		#if($foreach.count == 1)checked #end/><label class="labelcom">${status.name}</label>
	#end
	</p>
    <p>
        <span>管理范围</span>
        #foreach($accessType in $accessTypes)
            <input type="radio" name="type" class="radcom rad_wh" value="${accessType.type}"
                   #if($foreach.count == 1)checked #end/><label class="labelcom">${accessType.name}</label>
        #end
    </p>
	<p>
		<span>账号</span>
		<input id="account" name="account" type="text" class="bor txtth"></input>
	<p/>
	<p>
		<span>口令</span>
		<input id="password" name="password" type="password" class="bor txtth"></input>
	<p/>
    <p>
        <span>确认口令</span>
        <input id="confirmPasswd" name="confirmPasswd" type="password" class="bor txtth"></input>
    <p/>
	<p>
		<span>名称</span>
		<input id="adminName" name="name" type="text" class="bor txtth"></input>
	<p/>
	<p>
		<span>电话号码</span>
		<input id="phone" name="phone" type="text" class="bor txtth"></input>
	<p/>
	<p>
		<span>电子邮件</span>
		<input id="mail" name="mail"  type="text" class="bor txtth"></input>
	<p/>
	</div>
	<div class="btn_bottom">
		<input type="submit" value="创建" class="btn_small m_r"></input>
		<input type="reset" value="重置" class="btn_small m_r"></input>
	</div>
	</form>
	</div>
	</div>
