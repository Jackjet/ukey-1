<script type="text/javascript">
function checkFile(){
	var logos = new Array($("input[name='logo1']").val(),$("input[name='logo2']").val());
	var extStart;
	var logoProp;
	
	for(var i in logos){
		if(logos[i]==null|| logos[i]=="")
			continue;
		var img=new Image(); 
		img.src=logos[i];
		logoProp = img.nameProp;
		extStart=logoProp.lastIndexOf("."); 
		var ext=logoProp.substring(extStart,logoProp.length).toUpperCase(); 
		if(ext!=".PNG"){ 
	 		alert("图片限于png格式"); 
	 		return false; 
		}
	}

	return true;        
}
</script>
